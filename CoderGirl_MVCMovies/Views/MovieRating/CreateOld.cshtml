@model CoderGirl_MVCMovies.ViewModels.MovieRatings.MovieRatingCreateViewModel

@{
    ViewData["Title"] = "Rate Movie";
}

<h1>Rate a Movie</h1>

<h4>MovieRating Create View Model</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label">MovieName</label>
            </div>

        </form>
    </div>
</div>
<form method='post'>
    <input id="@Model.MovieId"  readonly asp-for="MovieName" value="@Model.MovieName"/>
    <select asp-for="Rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type='submit'>Rate Movie</button>
</form>


