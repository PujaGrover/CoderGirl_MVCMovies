
@{
    ViewData["Title"] = "Rate Movie";
}

<h1>Rate a Movie</h1>
<form method='post'>
    <label for='movieName'>Movie Name</label>
    <select name="movieName" id='movieName'>
        @foreach (var movie in ViewBag.Movies)
        {
            <option>@movie.Value</option>
        }
    </select>
    <select name="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type='submit'>Rate it</button>
</form>
