@model IEnumerable<CoderGirl_MVCMovies.ViewModels.Movies.MovieIndexViewModel>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<a asp-controller="Movie" asp-action="Create">Add New Movie</a>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.DirectorName)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th>Average Rating</th>
            <th>Number of Ratings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr id="@movie.Id">
            <td>@Html.DisplayFor(modelItem => movie.Name)</td>
            <td>@Html.DisplayFor(modelItem => movie.DirectorName)</td>
            <td>@Html.DisplayFor(modelItem => movie.Year)</td>
            @*<td>@Html.DisplayFor(modelItem => movie.AverageRating)</td>*@
            @if (movie.Ratings.Count > 0)
            {
                <td>@movie.Ratings.Average()</td>
            }
            else
            {
                <td>none</td>
            }
            @*<td>@Html.DisplayFor(modelItem => movie.NumberOfRatings)</td>*@
        <td>@movie.Ratings.Count</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = movie.Id }) |

                @Html.ActionLink("Rate", "Create", "MovieRating", new { movieId = movie.Id }) |

                @Html.ActionLink("Delete", "Delete", new { id = movie.Id })
            </td>
            @*<td><a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
        <td><a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a></td>
        <td><a asp-controller="MovieRating" asp-action="Create" asp-route-movieId="@movie.Id">Rate</a></td>
            *@
        </tr>
        }
        </tbody>
</table>
